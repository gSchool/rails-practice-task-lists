<%= form_for [@task_list, @task], html: { class: "task-form" } do |f| %>


  <% if f.object.errors.any? %>
    <div class="error">Your task could not be created</div>
  <% end %>

  <div class="form-row">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_field :description %>
  </div>

  <div class="form-row">
    <%= f.label :due_date, class: "form-label" %>
    <%= f.date_select :due_date %>
  </div>

  <div class="form-rom">
    <%= f.label :assigned_to, class: "form-label" %>
    <%= f.collection_select :assigned_to, User.order(:name), :id, :name, include_blank: "Select a user" %>
  </div>

  <div class="form-row">
    <%= f.submit %>
  </div>

<% end %>